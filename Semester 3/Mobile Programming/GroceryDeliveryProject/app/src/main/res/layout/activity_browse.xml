<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowseActivity">

    <Button
        android:id="@+id/browseCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@android:color/darker_gray"
        android:onClick="browseCancelOnClick"
        android:text="@string/cancel"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/foodbasicsBtn"
        app:layout_constraintTop_toBottomOf="@+id/foodbasicsBtn" />

    <ImageButton
        android:id="@+id/foodbasicsBtn"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:onClick="foodbasicsOnClick"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/browseCancelBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/superstoreBtn"
        app:srcCompat="@drawable/foodbasics_logo"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/superstoreBtn"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:onClick="superstoreOnClick"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/foodbasicsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metroBtn"
        app:srcCompat="@drawable/superstore_logo"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/whereYouShoppingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="16dp"
        android:text="@string/where_u_shopping"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/walmartBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/walmartBtn"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:onClick="walmartOnClick"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/metroBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whereYouShoppingText"
        app:srcCompat="@drawable/walmart_logo"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/metroBtn"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:onClick="metroOnClick"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/superstoreBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walmartBtn"
        app:srcCompat="@drawable/metro_logo"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>