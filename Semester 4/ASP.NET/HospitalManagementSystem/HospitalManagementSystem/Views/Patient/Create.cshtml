@model Patient

<h1>Create a new patient</h1>

<form asp-action="Create"  asp-controller="Patient" method="post">
	<label asp-for="DoctorID">Doctor</label>
    <select asp-for="DoctorID" asp-items="ViewBag.DoctorID"></select>
	<br />
	<br />
	<label asp-for="Name"></label>
	<input asp-for="Name" type="text" placeholder="Name" />
	<span asp-validation-for="Name" class="text-danger"></span>
	<br />
	<br />
	<button>Create</button>
	<a asp-action="Index" asp-controller="Patient">Back to patients</a>
</form>