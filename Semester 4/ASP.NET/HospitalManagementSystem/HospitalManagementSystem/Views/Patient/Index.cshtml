@model IEnumerable<Patient>

	<h1>Patients</h1>

	<form asp-action="Search" asp-controller="Patient" method="POST">
		<input type="text" name="searchTerm" placeholder="Search patients by name" />
		<button>Search</button>
	</form>

	<a asp-action="Create" asp-controller="Patient">Add patient</a>

	<table class="table">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Doctor</th>
			<th></th>

		</tr>
		@foreach(var patient in Model)
		{
			<tr>
				<td>@patient.Id</td>
				<td>@patient.Name</td>
				<td>@patient.Doctor.Name</td>
				<td>
					<a asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.Id">Edit</a>
				</td>
				<td>
					<a asp-controller="Patient" asp-action="Delete" asp-route-id="@patient.Id">Delete</a>
				</td>
			</tr>
		}
	</table>
