@model Patient

<h1>Are you sure you want to delete this patient?</h1>

<form asp-action="Delete"  asp-asp-controller="Doctor" method="post">
	<input asp-for="Id" hidden />
	
	<label asp-for="Name"></label>
	<input asp-for="Name" type="text" disabled />
	<br />
	<br />
	<label asp-for="DoctorID"></label>
	<input value="@ViewData["DoctorName"]" type="text" disabled />
	<br />
	<br />
	<button>Delete</button>
	<a asp-action="Index" asp-controller="Patient">Back to patients</a>
</form>