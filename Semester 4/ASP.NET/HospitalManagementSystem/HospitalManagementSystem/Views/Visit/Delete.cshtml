@model Visit

<h1>Are you sure you want to delete this visit?</h1>

<form asp-action="Delete"  asp-controller="Visit" method="post">
	<input asp-for="Id" hidden />
	
	<label asp-for="DoctorNotes"></label>
	<input asp-for="DoctorNotes" type="text" disabled />
	<br />
	<br />
	<label asp-for="DoctorID"></label>
	<input value="@ViewData["DoctorName"]" type="text" disabled />
	<br />
	<br />
	<label asp-for="PatientID"></label>
	<input value="@ViewData["PatientName"]" type="text" disabled />
	<br />
	<br />
	<button>Delete</button>
	<a asp-action="Index" asp-controller="Visit">Back to visits</a>
</form>